@model             LoginVm

@{
    Layout = null;
    ErrorVm InfoBox = (ErrorVm)ViewBag.ShowAlter;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>系統維修公告</title>
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/app.css">
</head>
<body>
    <div id="auth">

        <div class="container">
            <div class="row">
                <div class="col-md-5 col-sm-12 mx-auto">
                    <div class="card pt-4">
                        <div class="card-header">
                            @{
                                if (@InfoBox != null && InfoBox.Show == true)
                                {
                                    <div class="alert @InfoBox.Css alert-dismissible" role="alert">
                                        @InfoBox.Message
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                            }
                        </div>
                        <div class="card-body">
                            <div class="text-center mb-5">
                                <img src="@ViewBag.login_logo_url" height="128" class='mb-4'>
                                <h3>系統維修公告管理系統</h3>
                            </div>

                            <form asp-action="SignIn" id="form1">
                                
                                <div class="form-group position-relative has-icon-left">
                                    <label for="username">帳號</label>
                                    <div class="position-relative">
                                        @* @Html.DropDownList("LoginProvider", @ViewBag.Admins as List<SelectListItem>, new {@class="form-select"} ) *@
                                        <input type="text" asp-for="account" class="form-control" />

                                        <div class="form-control-icon">
                                            <i data-feather="user"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group position-relative has-icon-left">
                                    <div class="clearfix">
                                        <label for="password">密碼</label>
                                    </div>
                                    <div class="position-relative">
                                        <input required asp-for="password" class="form-control" type="password" />
                                        @* <input type="password" id="inputPwd" class="form-control" onkeyup="ChangePwd()" /> *@                                       
                                        <div class="form-control-icon">
                                            <i data-feather="lock"></i>
                                        </div>
                                    </div>
                                </div>

                                <div class="clearfix">
                                    <button class="btn btn-primary float-end">登錄</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/crypto-js.js"></script>
    <script src="~/js/feather-icons/feather.min.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/crypto.js"></script>
</body>
</html>
